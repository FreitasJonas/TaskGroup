@using TaskGroupWeb.Helpers
@model IEnumerable<TaskGroupWeb.Models.ProjectModel>

@{
    ViewData["Title"] = "Projetos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {
    <link href="~/lib/DataTables/css/jquery.dataTables.css" />
    <link href="~/lib/DataTables/css/dataTables.bootstrap4.css" />
}

@if (TempData[OperationResult.Error.ToString()] != null)
{
    <p class="alert alert-danger">@TempData[OperationResult.Error.ToString()]</p>
}
else if (TempData[OperationResult.Success.ToString()] != null)
{
    <p class="alert alert-success">@TempData[OperationResult.Success.ToString()]</p>
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Cadastrar novo projeto</span>
    </a>
</p>

<table id="table-projects" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.projectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.framework)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.projectId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.framework)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateCreated)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { projectId = item.projectId })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script src="~/lib/DataTables/js/jquery.dataTables.js"></script>

    <script>
        $('#table-projects').DataTable({
            paging: false,
            searching: false,
            info: false,
            columnDefs: [
                {
                    targets: 0,
                    visible: false
                }]
        });
    </script>
}

